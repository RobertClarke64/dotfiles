#!/bin/bash

VOLUME=$(/usr/lib/i3blocks/volume pulse | sed 's/%//g')
GLYPH=


if [[ $VOLUME == "MUTE" ]]
then
	VOLUME="MUTE"
	GLYPH=
elif (( $VOLUME >= 75 ))
then
	VOLUME=$VOLUME%
	GLYPH=
elif (( $VOLUME >= 25 ))
then
	VOLUME=$VOLUME%
	GLYPH=
elif (( $VOLUME < 25 ))
then
	VOLUME=$VOLUME%
	GLYPH=
fi

echo "<span font=\"FontAwesome 13\">$GLYPH</span> ($VOLUME)"
